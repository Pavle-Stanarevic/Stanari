# Backend: Database (Render)
DATABASE_URL=jdbc:postgresql://HOST:5432/DATABASE
DB_USERNAME=USERNAME
DB_PASSWORD=PASSWORD
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# Backend: Server
PORT=10000

# Upload limits
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=5MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=6MB
SERVER_TOMCAT_MAX_SWALLOW_SIZE=6MB

# Mail (Brevo)
MAIL_FROM=example@gmail.com
MAIL_SMTP_HOST=smtp-relay.brevo.com
MAIL_SMTP_PORT=2525
MAIL_SMTP_USERNAME=your_smtp_username
MAIL_SMTP_PASSWORD=your_smtp_password

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENV=sandbox

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
